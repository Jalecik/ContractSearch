<div class="container">

    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="input-group col-md-12">
                <input id="searchId" type="text" class="form-control input-lg" name="search_term">
                <span class="input-group-btn"><button type="submit" class="btn btn-primary btn-lg">Search</button>
               </span>
            </div>
        </div>

    </div>
    <div class="row" id="SearchResultId">
        {{#each products}}
        <div class="col-md-4">
            <a href="/product/{{_id}}">
                <div class="thumbnail">
                    <img src="{{image}}" alt="">
                    <div class="caption">
                        <h3>{{name}}</h3>
                        <p>{{category.name}}</p>
                        {{price}}
                    </div>
                </div>
            </a>
        </div>
        {{/each}}


        <ul class="pagination text-center">
            <li>
                {{ pages}}

            </li>
        </ul>
    </div>



</div>